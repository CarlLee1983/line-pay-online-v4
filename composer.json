{
    "name": "carllee/line-pay-online-v4",
    "description": "LINE Pay Online V4 API SDK for PHP. Type-safe, PSR-4 compliant, with Builder Pattern and Laravel support.",
    "type": "library",
    "keywords": [
        "line",
        "line-pay",
        "linepay",
        "payment",
        "payment-gateway",
        "api",
        "sdk",
        "php",
        "laravel",
        "ecommerce",
        "fintech",
        "taiwan",
        "japan",
        "thailand",
        "LINE Pay",
        "金流",
        "行動支付"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Carl Lee",
            "email": "carllee1983@gmail.com"
        }
    ],
    "homepage": "https://github.com/CarlLee1983/line-pay-online-v4-php",
    "support": {
        "issues": "https://github.com/CarlLee1983/line-pay-online-v4-php/issues",
        "source": "https://github.com/CarlLee1983/line-pay-online-v4-php"
    },
    "require": {
        "php": "^8.1",
        "carllee/line-pay-core-v4": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "orchestra/testbench": "^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "LinePay\\Online\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LinePay\\Online\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage",
        "test:coverage": "@php -r \"exit(extension_loaded('xdebug') || extension_loaded('pcov') ? 0 : 1);\" && phpunit --coverage-html coverage || echo 'No coverage driver (Xdebug/PCOV). Run tests without coverage.' && phpunit --no-coverage",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse src tests --level=max"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "LinePay\\Online\\Laravel\\LinePayServiceProvider"
            ],
            "aliases": {
                "LinePay": "LinePay\\Online\\Laravel\\LinePay"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}